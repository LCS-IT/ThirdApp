<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowMap" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/title_show_map" />

<Button android:id="@+id/showMapButton" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:text="Show Map"
    android:layout_marginLeft="30dp" android:layout_marginRight="30dp"
    android:layout_marginTop="30dp"
    android:layout_alignParentTop="true">
</Button>


<FrameLayout android:id="@+id/allFragmentsFrameLayout"  android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:layout_alignParentTop="true">
    <!-- Put fragments dynamically -->
</FrameLayout>
</RelativeLayout>